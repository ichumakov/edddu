root = true

# Default settings
[*]
end_of_line = lf
insert_final_newline = true
charset = "utf-8"
trim_trailing_whitespace = true

# Documentation
[*.md]
trim_trailing_whitespace = false

# HTML
[*.html]
indent_style = tab
indent_size = 4

# CSS
[*.css]
indent_style = tab
indent_size = 4

# JavaScript
[*.js]
indent_style = tab
indent_size = 4

# package.json
[{package.json}]
indent_style = space
indent_size = 2
